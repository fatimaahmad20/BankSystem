@model BankSys.Models.ApplicationUser
@{
    ViewBag.Title = "Deposit";
}
<h2>deposit</h2>

@using (Html.BeginForm("confirmDeposit", "Bank", FormMethod.Post, new { @class = "form-horizantal", role = "form" }))
{

    @Html.AntiForgeryToken()
    <h4>hello you can add deposit money here !</h4>
    <hr />

    <div class="form-group">
        <label for="amount" class="col-md-2 control-label">amount to add:</label>
    </div>


    <div class="col-md-10">
        <input type="number" id="amount" name="amount" class="form-control" min="1" required />
    </div>


    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="form-group" />
    <div class="col-md-offset-2 col-md-10">

        <input type="submit" value="Submit" class="btn btn-block bg-primary">

    </div>


}
